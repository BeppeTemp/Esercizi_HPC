{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C Compile and Run (Only Mac)",
        "command": "g++ -g ${fileDirname}/${fileBasename} -o Compiled/${fileBasenameNoExtension}.out && Compiled/${fileBasenameNoExtension}.out",
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": [
          "$eslint-compact"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  